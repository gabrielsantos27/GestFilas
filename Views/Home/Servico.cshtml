@model IEnumerable<Servico>
<!-- service section -->

<section class="service_section layout_padding">
    <div class="service_container">
        <div class="container ">
            <div class="heading_container heading_center">
                <h2>
                    Nossos <span>Serviços</span>
                </h2>
                <p>
                    Todos os serviços disponiveis pela secretaria do INSTIC
                </p>
            </div>
			
			      @foreach (var servico in Model)
				   {
					 <div class="row">
						   <div class="col-md-4 ">
			
				  
								<div class="box ">
									<div class="img-box">
										<img src="~/img/s1.png" alt="">
									</div>
									<div class="detail-box">
										<h5>
											@servico.NomeServico
										</h5>
										<p>
										   Estado:@if (servico.Estado.Equals(ProjetoBacharelatoFilas.Helpers.Enum.Estado.Ativo))
											{
												<span class="text-primary">Disponível</span>
											}
											else
											{
											<span class="text-danger">Indisponível</span>
										
											}
									
										</p>
										<div class="btn-box">
											<a href="">
												Gerar Senha
											</a>
										</div>
									</div>
								</div>
						   </div>
					  </div>
					}
      
            <div class="btn-box">
                <a href="">
                    Reclamações
                </a>
            </div>
        </div>
    </div>
</section>

<!-- end service section -->