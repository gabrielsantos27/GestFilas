@using ProjetoBacharelatoFilas.ViewModels;
@model LoginViewModel

@{
    Layout = null;
    ViewData["Title"] = "Login";
}
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
    }

    body {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #00204a;
    }

    .container {
        position: relative;
        max-width: 500px;
        width: 100%;
        border-radius: 70px 0 70px 0;
        padding: 20px 50px;
        margin-left: auto;
        margin-right: auto;
        background-color: #fff;
        box-shadow: 0 5px 1px rgba(0,0,0,0.1);
    }

        .container header {
            position: relative;
            font-size: 26px;
            font-weight: 600;
            color: #333;
            text-align: center;
        }

        .container form {
            position: relative;
            margin-top: 25px;
            min-height: 300px;
            background-color: #fff;
            margin-bottom: 10px;
        }

            .container form .fields {
                display: flex;
                align-items: center;
                justify-content: space-between;
                flex-wrap: wrap;
            }

                .container form .fields .btn {
                    text-align: center;
                }

    form .fields .input-field {
        display: flex;
        width: calc(100% / 1 - 10px);
        flex-direction: column;
        margin: 4px 0;
    }

    .input-field label {
        font-size: 14px;
        font-weight: 500;
        color: #2e2e2e;
    }

    .input-field input {
        outline: none;
        font-size: 12px;
        font-weight: 400;
        color: #333;
        border-radius: 5px;
        border: 1px solid #aaa;
        padding: 0 10px;
        height: 42px;
        margin: 5px 0;
    }

        .input-field input:is(:focus, :valid) {
            box-shadow: 0 3px 6px rgba(0,0,0,0.13);
        }

    /* Botão Entrar */
    .container form button {
        justify-content: center;
        height: 45px;
        max-width: 100%;
        width: 100%;
        border: none;
        outline: none;
        color: white;
        border-radius: 5px;
        margin: 20px 0;
        background-color: #0d6efd;
        cursor: pointer;
        transition: 0.3s;
    }

        .container form button .btnText {
            font-size: 18px;
            text-decoration: none;
            color: white;
        }

    form button:hover {
        background-color:dodgerblue;
    }

    .container form p {
        text-align: center;
        font-size: 12px;
    }

        .container form p a {
            cursor: pointer;
            text-decoration: none;
            color: rgba(0, 0, 255, 0.901);
        }

            .container form p a:hover {
                text-decoration: underline;
            }

    small a{
        text-decoration: none;
            }

    small a:hover {
        text-decoration: underline;
    }
</style>
<div class="container">
    <header>Login</header>
    <form asp-action="Login" asp-controller="Account" method="post">
        <input type="hidden" asp-for="ReturnUrl" />
        <div class="fields">

            <div class="input-field">
                <label for="">Email:</label>
                <input type="email" asp-for="Email" placeholder="Inserir email">
                <span class="text-danger" style="color:red;" asp-validation-for="Email"></span>
            </div>

            <div class="input-field">
                <label asp-for="Password">Senha:</label>
                <input type="password" asp-for="Password" placeholder="Inserir senha" >
                <span class="text-danger" style="color:red;" asp-validation-for="Password"></span>
            </div>

        </div>

        <input type="checkbox" name="check" value="" checked/> <small> Lembrar a senha</small>
        <small style="margin-left:100px;"> <a href="#">Esqueceu à senha?</a>  </small> 
        <br />
        <p>Não tem uma conta? <a asp-action="Register" asp-controller="Account">Cria uma conta</a></p>

        <button class="btn" type="submit">
            <a class="btnText">Entrar</a>
        </button>
       
       

    </form>
</div>   
@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
