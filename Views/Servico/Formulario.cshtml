@using ProjetoBacharelatoFilas.ViewModels
@model FormularioViewModel

@{
    ViewData["Title"] = "Estudante";
}


<form asp-action="EfetuarPedido" method="post" class="d-flex justify-content-center">
    <div class="card card-primary" style="background-color: white; color: black; width: 50rem;">
        <div class="card-header">
            <h3 class="card-title">@ViewData["Title"]</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">

            <input type="hidden" asp-for="ServicoId" />
            <div class="form-group">
                <label asp-for="Estudante.NomeCompleto">Nome</label>
                <input type="text" asp-for="Estudante.NomeCompleto" class="form-control form-control-border" id="exampleInputBorder" placeholder="">
                <span asp-validation-for="Estudante.NomeCompleto" class="text-danger"></span>
            </div>

            @*  <div class="form-group">
            <label asp-for="Estudante.Email">Email</label>
            <input type="text" asp-for="Estudante.Email" class="form-control form-control-border" id="exampleInputBorder" placeholder="">
            <span asp-validation-for="Estudante.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
            <label asp-for="Estudante.Telefone">Telefone</label>
            <input type="text" asp-for="Estudante.Telefone" class="form-control form-control-border" id="exampleInputBorder" placeholder="">
            <span asp-validation-for="Estudante.Telefone" class="text-danger"></span>
            </div> *@

            <div class="form-group mt-3">
                <div class="d-flex justify-content-end">
                    <input type="submit" value="Guardar" class="btn btn-success me-2 mr-2" />
                    <a asp-action="Index" class="btn btn-primary">Retornar</a>
                </div>
            </div>
        </div>
    </div>
</form>
