@using ProjetoBacharelatoFilas.Consts
@model IEnumerable<PedidoServico>
 
<style>
    table{
        width:80% !important;
    }

    .dataTables_length, .dataTables_info {
        margin-left:10vw !important;
    }

    #myTable_filter, #myTable_paginate {
        margin-right: 10vw !important;
    }

    #myTable_paginate, .dataTables_info{
        margin-bottom:5vh !important;
    }
    
</style>


<div style="margin-bottom:40px;">
    <div class="row" style="position:relative;top:20px;">
        <div class="col-md-12">
            <div class="container">
                   <h2 class="text-center">Atendimento dos Pedidos</h2>
            </div>
        </div>
    </div>
</div>


<table id="myTable" class="display">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Solicitante</th>
            <th scope="col">Servico</th>
            <th scope="col">Senha</th>
            <th scope="col">Data</th>
            <th scope="col">Acções</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.NomeCompleto</td>
                <td>@item.Servico.NomeServico</td>
                <td>@item.SenhaPedido</td>
                <td>@item.DataCriacao.ManipularHora()</td>
                <td>
                    <a  disabled  title="Atender" class="btn btn-success">
                        <span >Atender</span>
                    </a>
                    <a  disabled   title="Cancelar" class="btn btn-danger">
                        Cancelar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts {
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable({
              //  "pageLength": 5,
                language: {
                   url: '//cdn.datatables.net/plug-ins/1.13.5/i18n/pt-PT.json'
                }
            });
        });
    </script>
}